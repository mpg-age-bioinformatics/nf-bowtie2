process {
    withName:mapping {
        executor='slurm'
        queue="${params.queue}"
        cpus=10
        memory='40GB'
        time='6h'
        container = "${params.image_folder}bowtie2-2.4.2"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir -B ${params.trimmed_raw}:/trimmed_raw"
    }
    withName:flagstat {
    executor='slurm'
    queue="${params.queue}"
    cpus=4
    memory='20GB'
    time='2h'
    container = "${params.image_folder}samtools-1.16.1.sif"
    containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
}
}

