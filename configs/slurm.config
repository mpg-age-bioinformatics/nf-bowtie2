process {
    withName:mapping {
        executor='slurm'
        queue="${params.queue}"
        cpus=10
        memory='40GB'
        time='6h'
        container = "${params.image_folder}bowtie2-2.4.2.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir -B ${params.bowtie_raw_data}:/trimmed_raw"
    }
    withName:bowtie2_indexer {
        executor='slurm'
        queue="${params.queue}"
        cpus=2
        memory='80GB'
        time='4h'
        container = "${params.image_folder}bowtie2-2.4.2.sif"
        containerOptions = "${params.extra_mounts} -B ${params.genomes}:/genomes"
    }
    withName:samtools_flagstat {
        executor='slurm'
        queue="${params.queue}"
        cpus=4
        memory='20GB'
        time='2h'
        container = "${params.image_folder}samtools-1.16.1.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }
    withName:qc_count {
        executor='slurm'
        queue="${params.queue}"
        cpus=4
        memory='20GB'
        time='2h'
        container = "${params.image_folder}samtools-1.16.1.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }
    withName:remove_mito {
        executor='slurm'
        queue="${params.queue}"
        cpus=10
        memory='40GB'
        time='6h'
        container = "${params.image_folder}samtools-1.16.1.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }
    withName:remove_duplicates {
        executor='slurm'
        queue="${params.queue}"
        cpus=4
        memory='16GB'
        time='2h'
        container = "${params.image_folder}picard-3.0.0.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }

}

